<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Review_ticket_Fragment"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Movie_namell"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/movie"
            />
        <TextView
            android:id="@+id/Movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="RAngoli"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cinemahall_name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Movie_namell"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/placeholder"
            />
        <TextView
            android:id="@+id/cinemahall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="m,nm"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Movie_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cinemahall_name_ll"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chronometer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Movie_time"
            android:text="jdhhd"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Movie_date_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Movie_time_ll"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar_icon"
            />
        <TextView
            android:id="@+id/Movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="gdgd"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_moviescreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Movie_date_ll"
        />
    <LinearLayout
        android:id="@+id/seatarrangemnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/iv_moviescreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <CheckBox
                android:id="@+id/seatA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-1"
                android:button="@null"
                android:layout_weight="1"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-2"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatA3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-3"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatA4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-4"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <CheckBox
                android:id="@+id/seatB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-1"
                android:button="@null"
                android:layout_weight="1"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-2"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-3"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatB4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-4"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <CheckBox
                android:id="@+id/seatC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-1"
                android:button="@null"
                android:layout_weight="1"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-2"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatC3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-3"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-4"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <CheckBox
                android:id="@+id/seatD1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-1"
                android:button="@null"
                android:layout_weight="1"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatD2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-2"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatD3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-3"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />
            <CheckBox
                android:id="@+id/seatD4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-4"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorMultiple"
                android:textAlignment="center"
                />

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seatarrangemnt"
        android:text="100"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        />

</RelativeLayout>